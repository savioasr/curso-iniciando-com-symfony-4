{% extends 'base.html.twig' %}

{% block title %}
    Visualização de Produto - 
{% endblock %}

{% block body %}

    <h1>Visualizar Produto - <small>{{ produto.nome }}</small></h1>
    <hr>

    <table class="table table-striped">

        <tbody>
            <tr>
                <td>Cod.</td>
                <td>{{ produto.id }}</td>
            </tr>

            <tr>
                <td>Nome</td>
                <td>{{ produto.nome }}</td>
            </tr>

            <tr>
                <td>Preço</td>
                <td>{{ produto.preco }}</td>
            </tr>

            <tr>
                <td>Descrição</td>
                <td>{{ produto.descricao }}</td>
            </tr>
        </tbody>

    </table>

{% endblock %}
